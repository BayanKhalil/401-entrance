<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <header>
        <%- include('layout/header.ejs')%>
    </header>
    <main>





        <% y.forEach(x=>{%>
            <div>

                <h2>
                    <%= x.name%>
                </h2>
                <p>
                    <%= x.gender%>
                </p>
                <img src=" <%= x.img%>" alt="">



                <form action="/favorites" method="POST">

                    <input type="hidden" name="name" value="<%= x.name%>">
                    <input type="hidden" name="gender" value="<%= x.gender%>">
                    <input type="hidden" name="img" value="<%= x.img%>">
                    <!-- <input type="hidden" name="img" value="<%= y.img%>">
                <input type="hidden" name="logoname" value="<%= y.name%>"> -->

                    <input type="submit" value="save to favorites">
                </form>
            </div>
            <%})%>

    </main>
</body>

</html>